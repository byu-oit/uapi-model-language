{
  "$id": "http://api.byu.edu/uapi/v0.1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Root object of a University API definition document",
  "required": [
    "$uapi",
    "info",
    "resources"
  ],
  "properties": {
    "$uapi": {
      "$ref": "#/definitions/uapi-version"
    },
    "$schema": {
      "type": "string"
    },
    "info": {
      "$ref": "#/definitions/uapi-info"
    },
    "resources": {
      "$ref": "#/definitions/uapi-resources"
    },
    "documentation": {
      "$ref": "#/definitions/uapi-documentation"
    },
    "$comment": {
      "$ref": "#/definitions/uapi-comment"
    }
  },
  "patternProperties": {
    "^x-": {
      "$ref": "#/definitions/uapi-extension"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "uapi-version": {
      "description": "UAPI Specification Version",
      "type": "string",
      "const": "0.1"
    },
    "uapi-info": {
      "description": "Information about a University API definition",
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "description": "Human-readable name of this API",
          "type": "string"
        },
        "version": {
          "description": "Version number of this API definition",
          "type": "string"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-resources": {
      "description": "Holds definitions of top-level resources",
      "type": "object",
      "properties": {
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^[a-z0-9][_a-z0-9]*[a-z0-9]$": {
          "$ref": "#/definitions/uapi-resource-model"
        }
      },
      "additionalProperties": false
    },
    "uapi-resource-model": {
      "description": "Defines a top-level UAPI Resource",
      "if": {
        "properties": {
          "type": {
            "const": "list"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/uapi-list-resource-model"
      },
      "else": {
        "$ref": "#/definitions/uapi-singleton-resource-model"
      }
    },
    "uapi-list-resource-model": {
      "type": "object",
      "required": [
        "type",
        "keys",
        "properties"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "list"
          ]
        },
        "keys": {
          "$ref": "#/definitions/uapi-keys"
        },
        "properties": {
          "$ref": "#/definitions/uapi-properties"
        },
        "list": {
          "$ref": "#/definitions/uapi-list-feature-model"
        },
        "create": {
          "$ref": "#/definitions/uapi-create-mutation"
        },
        "update": {
          "$ref": "#/definitions/uapi-update-mutation"
        },
        "delete": {
          "$ref": "#/definitions/uapi-delete-mutation"
        },
        "subresources": {
          "$ref": "#/definitions/uapi-subresources"
        },
        "claims": {
          "$ref": "#/definitions/uapi-claims"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-singleton-resource-model": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "singleton"
          ]
        },
        "properties": {
          "$ref": "#/definitions/uapi-properties"
        },
        "update": {
          "$ref": "#/definitions/uapi-update-mutation"
        },
        "delete": {
          "$ref": "#/definitions/uapi-delete-mutation"
        },
        "subresources": {
          "$ref": "#/definitions/uapi-subresources"
        },
        "claims": {
          "$ref": "#/definitions/uapi-claims"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-subresources": {
      "description": "Holds definitions of subresources",
      "type": "object",
      "properties": {
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^[a-z0-9][_a-z0-9]*[a-z0-9]$": {
          "$ref": "#/definitions/uapi-subresource-model"
        }
      },
      "additionalProperties": false
    },
    "uapi-subresource-model": {
      "description": "Defines a UAPI Subresource",
      "if": {
        "properties": {
          "type": {
            "const": "list"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/uapi-list-subresource-model"
      },
      "else": {
        "$ref": "#/definitions/uapi-singleton-subresource-model"
      }
    },
    "uapi-list-subresource-model": {
      "type": "object",
      "required": [
        "type",
        "keys",
        "properties"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "list"
          ]
        },
        "keys": {
          "$ref": "#/definitions/uapi-keys"
        },
        "properties": {
          "$ref": "#/definitions/uapi-properties"
        },
        "list": {
          "$ref": "#/definitions/uapi-list-feature-model"
        },
        "create": {
          "$ref": "#/definitions/uapi-create-mutation"
        },
        "update": {
          "$ref": "#/definitions/uapi-update-mutation"
        },
        "delete": {
          "$ref": "#/definitions/uapi-delete-mutation"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-singleton-subresource-model": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "singleton"
        },
        "properties": {
          "$ref": "#/definitions/uapi-properties"
        },
        "update": {
          "$ref": "#/definitions/uapi-update-mutation"
        },
        "delete": {
          "$ref": "#/definitions/uapi-delete-mutation"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-keys": {
      "description": "Key parameter definitions",
      "type": "array",
      "items": {
        "$ref": "#/definitions/uapi-property-name"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "uapi-properties": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9][_a-z0-9][a-z0-9]$": {
          "$ref": "#/definitions/uapi-property-model"
        }
      },
      "minProperties": 1
    },
    "uapi-property-model": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/uapi-value-property-model"
        },
        {
          "$ref": "#/definitions/uapi-value-array-property-model"
        },
        {
          "$ref": "#/definitions/uapi-object-property-model"
        },
        {
          "$ref": "#/definitions/uapi-object-array-property-model"
        }
      ]
    },
    "uapi-property-model-base": {
      "type": "object",
      "required": [
        "api_types"
      ],
      "properties": {
        "api_types": {
          "$ref": "#/definitions/uapi-api-types-set"
        },
        "has_description": {
          "type": "boolean"
        },
        "has_long_description": {
          "type": "boolean"
        },
        "has_display_label": {
          "type": "boolean"
        },
        "nullable": {
          "type": "boolean"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      }
    },
    "uapi-api-types-set": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/uapi-api-type"
      }
    },
    "uapi-api-type": {
      "type": "string",
      "enum": [
        "read-only",
        "modifiable",
        "system",
        "derived",
        "related"
      ]
    },
    "uapi-property-name": {
      "type": "string",
      "pattern": "^[a-z0-9][_a-z0-9]*[a-z0-9]$"
    },
    "uapi-value-property-model": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/uapi-property-model-base"
        },
        {
          "required": [
            "value"
          ],
          "properties": {
            "value": {
              "$ref": "#/definitions/uapi-value-property-type-model"
            },
            "key": {
              "type": "boolean"
            }
          }
        }
      ]
    },
    "uapi-value-property-type-model": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "$ref": "#/definitions/uapi-value-type"
        },
        "constraints": {
          "$ref": "#/definitions/uapi-value-constraints"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-value-array-property-model": {
      "allOf": [
        {
          "$ref": "#/definitions/uapi-property-model-base"
        },
        {
          "type": "object",
          "required": [
            "value_array"
          ],
          "properties": {
            "value_array": {
              "$ref": "#/definitions/uapi-value-array-property-type-model"
            }
          }
        }
      ]
    },
    "uapi-value-array-property-type-model": {
      "type": "object",
      "required": [
        "items"
      ],
      "properties": {
        "items": {
          "$ref": "#/definitions/uapi-value-property-type-model"
        },
        "constraints": {
          "$ref": "#/definitions/uapi-array-constraints"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-array-constraints": {
      "type": "object",
      "properties": {
        "minItems": {
          "type": "integer"
        },
        "maxItems": {
          "type": "integer"
        },
        "uniqueItems": {
          "type": "boolean"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-object-property-model": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/uapi-property-model-base"
        },
        {
          "required": [
            "object"
          ],
          "properties": {
            "object": {
              "$ref": "#/definitions/uapi-object-property-type-model"
            }
          }
        }
      ]
    },
    "uapi-object-property-type-model": {
      "type": "object",
      "required": [
        "properties"
      ],
      "properties": {
        "properties": {
          "$ref": "#/definitions/uapi-properties"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-object-array-property-model": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/uapi-property-model-base"
        },
        {
          "required": [
            "object_array"
          ],
          "properties": {
            "object_array": {
              "$ref": "#/definitions/uapi-object-array-property-type-model"
            }
          }
        }
      ]
    },
    "uapi-object-array-property-type-model": {
      "type": "object",
      "required": [
        "items"
      ],
      "properties": {
        "items": {
          "$ref": "#/definitions/uapi-object-property-type-model"
        },
        "constraints": {
          "$ref": "#/definitions/uapi-array-constraints"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-create-mutation": {
      "type": "object",
      "required": [
        "input_schema"
      ],
      "properties": {
        "input_schema": {
          "$ref": "#/definitions/uapi-input-schema"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-update-mutation": {
      "type": "object",
      "required": [
        "input_schema"
      ],
      "properties": {
        "input_schema": {
          "$ref": "#/definitions/uapi-input-schema"
        },
        "creates_if_missing": {
          "type": "boolean"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-delete-mutation": {
      "type": "object",
      "properties": {
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-input-schema": {
      "type": "object",
      "properties": {
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-list-feature-model": {
      "type": "object",
      "required": [],
      "properties": {
        "subset": {
          "$ref": "#/definitions/uapi-list-subset-feature"
        },
        "filters": {
          "$ref": "#/definitions/uapi-list-filters-feature"
        },
        "sorting": {
          "$ref": "#/definitions/uapi-list-sort-feature"
        },
        "search": {
          "$ref": "#/definitions/uapi-list-search-feature"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-list-subset-feature": {
      "type": "object",
      "required": [
        "default_size",
        "max_size"
      ],
      "properties": {
        "default_size": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "max_size": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-list-filters-feature": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9][._a-z0-9]*[a-z0-9]$": {
          "$ref": "#/definitions/uapi-list-filter-parameter"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "uapi-list-filter-parameters": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9][._a-z0-9]*[a-z0-9]$": {
          "$ref": "#/definitions/uapi-list-filter-parameter"
        }
      }
    },
    "uapi-list-filter-parameter": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "$ref": "#/definitions/uapi-value-type"
        },
        "constraints": {
          "$ref": "#/definitions/uapi-value-constraints"
        },
        "allow_multiple": {
          "type": "boolean"
        },
        "supported_operators": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/uapi-list-filter-operator"
          },
          "uniqueItems": true
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-list-filter-operator": {
      "type": "string",
      "enum": [
        "starts_with",
        "ends_with",
        "contains",
        "gt",
        "gt_or_eq",
        "lt",
        "lt_or_eq",
        "not_eq",
        "is_null",
        "is_empty",
        "not_in"
      ]
    },
    "uapi-list-sort-feature": {
      "type": "object",
      "required": [
        "available_sort_properties",
        "default_sort_properties"
      ],
      "properties": {
        "available_sort_properties": {
          "$ref": "#/definitions/uapi-sort-properties"
        },
        "default_sort_properties": {
          "$ref": "#/definitions/uapi-sort-properties"
        },
        "default_sort_order": {
          "$ref": "#/definitions/uapi-sort-order"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-sort-properties": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uapi-property-name"
      },
      "uniqueItems": true
    },
    "uapi-sort-order": {
      "type": "string",
      "enum": [
        "ascending",
        "descending"
      ]
    },
    "uapi-list-search-feature": {
      "type": "object",
      "required": [
        "search_contexts_available"
      ],
      "properties": {
        "search_contexts_available": {
          "$ref": "#/definitions/uapi-search-contexts"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-search-contexts": {
      "type": "object",
      "properties": {
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        }
      },
      "patternProperties": {
        "^[a-z0-9][_a-z0-9]*[a-z0-9]$": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/uapi-property-name"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "uapi-value-type": {
      "description": "Predefined UAPI data types",
      "type": "string",
      "enum": [
        "int",
        "big-int",
        "decimal",
        "big-decimal",
        "string",
        "boolean",
        "date",
        "date-time",
        "byte-array"
      ]
    },
    "uapi-value-constraints": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string"
        },
        "maximum": {
          "type": "number"
        },
        "minimum": {
          "type": "number"
        },
        "exclusiveMaximum": {
          "type": "boolean"
        },
        "exclusiveMinimum": {
          "type": "boolean"
        },
        "maxLength": {
          "type": "integer"
        },
        "minLength": {
          "type": "integer"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "$comment": {
          "$ref": "#/definitions/uapi-comment"
        },
        "documentation": {
          "$ref": "#/definitions/uapi-documentation"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/uapi-extension"
        }
      },
      "additionalProperties": false
    },
    "uapi-claims": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/uapi-claim"
